<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_error_message_display_padding"
        android:text="@string/error_message"
        android:textSize="@dimen/tv_error_message_display_text_size"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="@dimen/pb_loading_indicator_width"
        android:layout_height="@dimen/pb_loading_indicator_height"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</merge>
