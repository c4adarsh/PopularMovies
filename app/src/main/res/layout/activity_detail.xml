<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/tv_movie_name_padding_bottom"
            android:paddingTop="@dimen/tv_movie_name_padding_top"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_movie_name_text_size"/>

        <LinearLayout
            android:id="@+id/linear_layout_image_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/linear_layout_image_release_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_movie"
                android:layout_width="@dimen/iv_movie_width"
                android:layout_height="@dimen/iv_movie_height"
                android:layout_weight="1"
                android:contentDescription="@string/poster_of_the_movie"/>

            <LinearLayout
                android:id="@+id/linear_layout_text_views"
                android:layout_width="@dimen/linear_layout_text_views_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/release_date_padding_right"
                    android:paddingLeft="@dimen/release_date_padding_left"
                    android:paddingRight="@dimen/release_date_padding_right"
                    android:paddingStart="@dimen/release_date_padding_left"
                    android:paddingTop="@dimen/release_date_padding_top"
                    android:text="@string/release_date"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_movie_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/tv_movie_date_padding_right"
                    android:paddingLeft="@dimen/tv_movie_date_padding_left"
                    android:paddingRight="@dimen/tv_movie_date_padding_right"
                    android:paddingStart="@dimen/tv_movie_date_padding_left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/average_rating_padding_end"
                    android:paddingLeft="@dimen/average_rating_padding_left"
                    android:paddingRight="@dimen/average_rating_padding_end"
                    android:paddingStart="@dimen/average_rating_padding_left"
                    android:paddingTop="@dimen/average_rating_padding_top"
                    android:text="@string/average_rating"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/tv_movie_rating_padding_end"
                    android:paddingLeft="@dimen/tv_movie_rating_padding_start"
                    android:paddingRight="@dimen/tv_movie_rating_padding_end"
                    android:paddingStart="@dimen/tv_movie_rating_padding_start"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/tv_movie_description_padding_right"
            android:paddingLeft="@dimen/tv_movie_description_padding_left"
            android:paddingRight="@dimen/tv_movie_description_padding_right"
            android:paddingStart="@dimen/tv_movie_description_padding_left"
            android:paddingTop="@dimen/tv_movie_description_padding_top"/>

    </LinearLayout>
</ScrollView>
